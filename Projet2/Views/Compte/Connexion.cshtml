@model Projet2.ViewModels.MemberViewModel

@section Styles{
    <link href="/assets/css/login.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "Connexion";
    Layout = "_Layout";
}

@using (Html.BeginForm())
{
<div class="container login-container">
    <div class="row justify-content-md-center">
        <div class="col-md-6 login-form-1">
            <h3>Se connecter</h3>
            <br>
            <br>
            @if(!ViewData.ModelState.IsValid) {
                 <span class="alert alert-danger">@Html.ValidationMessage("Pseudonym.Password")</span>
                 <br />
                 <br />
             }
            
            <form>
                <div class="form-group">
                    <input type="text" class="form-control" name="Pseudonym" placeholder="Pseudonym *" value="" />
                </div>
                <div class="form-group">
                    <input type="password" name="Password" class="form-control" placeholder="Mot de passe *" value="" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btnSubmit" value="Se connecter" />
                </div>
                <div class="form-group">
                    <a href="#" class="ForgetPwd">Mot de passe oublié?</a>
                </div>
            </form>
        </div>
    </div>
</div>
}