<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body>
    <div id="entete">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="~/Home/Index">AssoNow</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="~/Compte/Modifier/1">Modifier mon compte</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    @{
                        if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item active">
                                <a class="nav-link" href="~/Compte/Creer">Créer un compte <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Compte/Connexion">Se connecter</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="~/Association/Inscrire">Inscrire une association</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Compte/Deconnexion">Se déconnecter</a>
                            </li>
                        }
                    }
                </ul>
            </div>
        </nav>
        <br>
        <br>
    </div>
    <div>
        @RenderBody()
    </div>
    <br>
    <br>
    <div id="footer" class="navbar navbar-expand-lg navbar-light bg-light">
        @DateTime.Now.Year - AssoNow
    </div>
</body>
</html>
