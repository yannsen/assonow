@model Projet2.ViewModels.AssociationProfileViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.title = "Profil Association";
    Layout = "_Layout";
}
<main>
    <!-- About section one-->

    <section>
        <div class="container px-5 my-5">

            <div class="row gx-5 align-items-center">
                <div class="col-lg-4">
                    <img class="img-fluid " img-rounded img-responsive" mb-5 mb-lg-0 shadow" src="@Model.Association.Image" alt="@Model.Association.Name" />
                </div>


                <div class="col-lg-8">
                    <h2 class="fw-bolder">@Html.DisplayFor(model => Model.Association.Name)</h2>
                    <p class="lead fst-normal text-muted-sm mb-0">
                        @Html.DisplayFor(model => Model.Association.Description)
                    </p>

                </div>
                <div class="py-5">
                    <a class="btn btn-primary btn-sm px-4 me-sm-3" asp-controller="Donation" asp-action="Association" asp-route-id="@Model.Association.Id">Faire un don</a>
                    @{
                        if (!User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-primary btn-sm px-4 me-sm-3" asp-controller="Donation" asp-action="Association" asp-route-id="@Model.Association.Id">Adhérer</a>
                        }
                        else
                        {
                            <a class="btn btn-primary btn-sm px-4 me-sm-3" asp-controller="Donation" asp-action="Association" asp-route-id="@Model.Association.Id">Gérer les adhérents</a>
                        }
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- About section two-->
