<!DOCTYPE html>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-md navbar-white bg-white sticky-top">
            <a class="navbar-brand" href="/"><img src="~/Images/logoAssonow.png" width="100"/></a>
            <div class="collapse navbar-collapse justify-content-between" id="navbarSupportedContent">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="~/Association/ListeDesAssociations">Les associations</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/AssociationEvent/VisibleEventList">Les évènements</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Fundraising/FundraisingList">Les collectes</a></li>
                </ul>
                <ul class="navbar-nav">
                    @{
                        if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item px-2"><a class="btn btn-outline-primary" href="~/Compte/Creer">Créer un compte</a></li>
                            <li class="nav-item px-2"><a class="btn btn-outline-primary" href="~/Compte/Connexion">Se connecter</a></li>
                        }else{
                            if (User.IsInRole("Administrator"))
                            {
                                <li class="nav-item px-2"><a class="btn btn-outline-primary" href="~/AdminDashboard/Index">Tableau de bord</a></li>
                            }else if (User.IsInRole("Representative"))
                            {<li class="nav-item px-2"><a class="btn btn-outline-primary" href="~/AssociationEvent/Index">Tableau de bord</a></li>
                                //Bouton pour le role representative
                            }else if (User.IsInRole("LegalExpert"))
                            {
                                //Bouton pour le role legalexpert
                            }else {
                                <li class="nav-item px-2"><a class="btn btn-outline-primary" href="~/Association/Inscrire">Inscrire une association</a></li>
                            }
                            <li class="nav-item px-2"><a class="btn btn-outline-primary" href="~/Compte/Deconnexion">Se déconnecter</a></li>
                        }
                    }
                    </ul>
            </div>
    </nav>
    <div>
        <br>
        <br>
        @RenderBody()
        <br>
        <br>
    </div>
    <br>
    <br>
    <footer class="bg-white py-4 mt-auto">
            <div class="container px-5">
                <div class="row align-items-center justify-content-between flex-column flex-sm-row">
                    <div class="col-auto"><p class="text-footer">Copyright &copy; Assonow @DateTime.Now.Year</p></div>
                </div>
            </div>
        </footer>
</body>
</html>
