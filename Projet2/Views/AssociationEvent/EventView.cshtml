@model Projet2.ViewModels.AssociationEventInfoViewmodel

@{
    ViewBag.Title = "l'évènement";
    Layout = "_Layout";
}


@using (Html.BeginForm("TicketRegister", "Ticketing", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <fieldset>
        <legend align="center">Informations sur l'évènement</legend>
        <br>
        <br>


         @Html.HiddenFor(m=>m.SelectedAssociationId)
                @Html.HiddenFor(m=>m.AssociationEvent.AddressId)
                @Html.HiddenFor(m=>m.AssociationEvent.AssociationId)
                @Html.HiddenFor(m=>m.AssociationEvent.Id)
                @Html.HiddenFor(m=>m.AssociationEvent.Image)



<div class="d-flex flex-column justify-content-center w-100">
    <div class="d-flex">
        <img src="@Model.AssociationEvent.Image" class="rounded mx-auto d-block" alt="@Model.SelectedAssociationId">
    </div>
    <div class="d-flex flex-row justify-content-center w-100">
        <div class="d-flex">
            <img src="@Model.AssociationEvent.Image" width="100" height="100"/>
        </div>
        <div class="d-flex">
            <table class="table"> 
                <tr>
                      <td>@Html.LabelFor(m => Model.AssociationEvent.EventTitle)</td>
                      <td>@Model.AssociationEvent.EventTitle)</td>  
                </tr>
            <tr>
                <td>@Html.LabelFor(m => Model.AssociationEvent.Description)</td>
                <td>@Model.AssociationEvent.Description)</td>
            </tr>

            </table>   

        </div>
    </div>
    <div class="d-flex justify-content-center w-100">
        
            <table>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.AssociationEvent.Date)</td>
                <td>@Model.AssociationEvent.Date)</td>
            </tr>

            <tr>
                <td align="right">@Html.LabelFor(m => Model.AssociationEvent.EventType)</td>
                <td>@Model.AssociationEvent.EventType</td>
            </tr>

            <tr>
                <td align="right">@Html.LabelFor(m => Model.AssociationEvent.Speakers)</td>
                <td>@Model.AssociationEvent.Speakers</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.AssociationEvent.Artists)</td>
                <td>@Model.AssociationEvent.Artists</td>
            </tr>

            <tr>
                <br>
                <td align="right">Nombre de places disponibles</td>
                <td>@Model.AssociationEvent.TicketsTotalNumber</td>
            </tr>
        </table>

        

    </div>
    <div>

           <table width="50%" align="center">
            <tr>
                <td width="50%" align="right">@Html.LabelFor(m => Model.TicketsNumber) </td>
                <td> </td>
                <td>@Html.TextBoxFor(m => Model.TicketsNumber)</td>
                <td> </td>
                <td align="right">@Model.AssociationEvent.TicketPrice</td>
                <td> = </td>
                <td align="right">@(Model.AssociationEvent.TicketPrice*Model.TicketsNumber)</td>
            </tr>



        </table>
</div>

    <div class="d-flex justify-content-center w-100">
        <input type="submit" value="Ajouter" /> 
        <br>
        <a class="btn btn-primary" href="~/Ticketing/TicketRegister?id=@Model.AssociationEvent&TicketsNumber=">ajouter au panier</a>
        <br>
        <a class="btn btn-primary" href="~/Ticketing/Index/">Voir panier</a>
    </div>
</div>





          
           

     










