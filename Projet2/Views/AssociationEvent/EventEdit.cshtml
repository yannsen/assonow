@model Projet2.ViewModels.AssociationEventInfoViewmodel

@{
    ViewBag.Title = "Modification de l'évènement";
    Layout = "_Layout";
}


@using (Html.BeginForm("EventEdit", "AssociationEvent", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.HiddenFor(m=>m.SelectedAssociationId)
    @Html.HiddenFor(m=>m.AssociationEvent.AddressId)
    @Html.HiddenFor(m=>m.AssociationEvent.AssociationId)
    @Html.HiddenFor(m=>m.AssociationEvent.Id)
    @Html.HiddenFor(m=>m.AssociationEvent.Image)
    <fieldset>
        <legend align="center">Informations sur l'évènement à modifier</legend>
        <br>
        <br>

   
        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <a href="examples/landing.html" target="_blank">
                        <img src="@Model.AssociationEvent.Image" alt="Rounded Image" style="height:400px; width:auto; min-height:400px; max-width:350px;" class="img-rounded img-responsive" style="width: 75%">

                    </a>
                </div>
                <div class="col-sm">
                    <table>
                            <tr>
                                <td>@Html.LabelFor(m => Model.AssociationEvent.EventTitle)</td>
                                <td>@Html.TextBoxFor(m => Model.AssociationEvent.EventTitle)</td>
                                <td>@Html.ValidationMessageFor(m => Model.AssociationEvent.EventTitle)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(m => Model.AssociationEvent.Description)</td>
                                <td>@Html.TextAreaFor(m => Model.AssociationEvent.Description, new{rows="6", cols="25"})</td>
                                <td>@Html.ValidationMessageFor(m => Model.AssociationEvent.Description)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(m => m.File)</td>
                                <td>@Html.TextBoxFor(m => m.File, new { placeholder = "Description", @type = "file" })</td>
                                <td>@Html.ValidationMessageFor(m => m.File)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(m => Model.AssociationEvent.Date)</td>
                                <td>@Html.TextBoxFor(m => Model.AssociationEvent.Date,"{0:dd/MM/yyyy}", new {maxlength = "10", size ="10"})</td>

                                <td>@Html.ValidationMessageFor(m => Model.AssociationEvent.Date)</td>
                            </tr>

                            <tr>
                                <td align="right">@Html.LabelFor(m => Model.AssociationEvent.EventType)</td>
                                <td>@Html.TextBoxFor(m => Model.AssociationEvent.EventType)</td>
                                <td>@Html.ValidationMessageFor(m => Model.AssociationEvent.EventType)</td>
                                <td><input type="submit" value="Valider" /></td>
                            </tr>
                         


                        </table>
                </div>
                <div class="col-sm">
                    <table>


                            <tr>
                                <td align="right">@Html.LabelFor(m => Model.AssociationEvent.TicketsTotalNumber)</td>
                                <td>@Html.TextBoxFor(m => Model.AssociationEvent.TicketsTotalNumber, new {size ="6"})</td>
                                <td>@Html.ValidationMessageFor(m => Model.AssociationEvent.TicketsTotalNumber)</td>
                            </tr>
                            <tr>
                                <td align="right">@Html.LabelFor(m => Model.AssociationEvent.TicketPrice)</td>
                                <td>@Html.TextBoxFor(m => Model.AssociationEvent.TicketPrice, new {size ="5"})</td>
                                <td>@Html.ValidationMessageFor(m => Model.AssociationEvent.TicketPrice)</td>
                            </tr>

                            <tr>
                                <td align="right">@Html.LabelFor(m => Model.Address.RoadNumber)</td>
                                <td>@Html.TextBoxFor(m => Model.Address.RoadNumber, new {size ="2"})</td>
                                <td>@Html.ValidationMessageFor(m => Model.Address.RoadNumber)</td>
                            </tr>

                            <tr>
                                <td align="right">@Html.LabelFor(m => Model.Address.Road)</td>
                                <td>@Html.TextBoxFor(m => Model.Address.Road)</td>
                                <td>@Html.ValidationMessageFor(m => Model.Address.Road)</td>
                            </tr>
                            <tr>
                                <td align="right">@Html.LabelFor(m => Model.Address.City)</td>
                                <td>@Html.TextBoxFor(m => Model.Address.City)</td>
                                <td>@Html.ValidationMessageFor(m => Model.Address.City)</td>
                            </tr>
                            <tr>
                                <td align="right">@Html.LabelFor(m => Model.Address.PostalCode)</td>
                                <td>@Html.TextBoxFor(m => Model.Address.PostalCode, new {size ="4"})</td>
                                <td>@Html.ValidationMessageFor(m => Model.Address.PostalCode)</td>
                            </tr>
                            <tr>
                                <td align="right">@Html.LabelFor(m => Model.Address.Country)</td>
                                <td>@Html.TextBoxFor(m => Model.Address.Country)</td>
                                <td>@Html.ValidationMessageFor(m => Model.Address.Country)</td>
                            </tr>


                        </table>
                </div>
            </div>
        </div>
 <div class="row"> </div>

    </fieldset>
  


}