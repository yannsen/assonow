@model List<Projet2.Models.Member>

@using Projet2.Models

@{
    ViewBag.title = "Vos adhérents";
    Layout = "_Layout";
}

<div class="d-flex flex-column align-items-center w-100">
    <div class="d-flex">
        <p>Vos adhérents</p>
    </div>
    <div class="d-flex">
        <table class="table table-bordered table-light table-striped border-2">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Arrêter l'adhésion</th>
                </tr>
            </thead>
            @foreach (Member member in @Model)
            {
                <tr>
                    <td><p>@member.Lastname</p></td>
                    <td><p>@member.Firstname</p></td>
                    <td><a class="btn btn-primary btn-lg px-4 me-sm-3" href="~/Association/DeleteMember?memberid=@member.Id&associationId=@ViewBag.AssociationId">Arrêter l'adhésion</a></td>
                </tr>
            }
        </table>
    </div>
</div>