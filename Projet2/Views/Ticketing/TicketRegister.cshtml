@model Projet2.ViewModels.TicketingViewModel

@{
    ViewBag.Title = "Commande de billets";
    Layout = "_Layout";
}
<script type="text/javascript" src="/js/validateresult.js"></script> 
<div class="d-flex w-100 justify-content-center">
    @using (Html.BeginForm())
    {
        <fieldset>
            <legend align="center">Billet pour @Model.EventTitle</legend>
        <table>
            @Html.HiddenFor(m => m.EventId)
            @Html.HiddenFor(m => m.TicketPrice)
            <tr> 
                <td>
                    @Html.LabelFor(m => m.TicketsNumber)
                    @Html.TextBoxFor(m => m.TicketsNumber,new {@class="amount", @onkeyup="onkeyupsum()", @autocomplete="off"})
                     @Html.DisplayFor(m=>m.TicketPrice,new {@class="amount", @onkeyup="onkeyupsum()", @autocomplete="off"})
                    X
                    @Html.TextBoxFor(m=>m.Amount)
                    
                </td>
            </tr>
            <tr>
                <td colspan="3" align="center">
                    <br><br><input type="submit" value="Valider"  onclick="check()"/>
                </td>
            </tr>
        </table>
        </fieldset>
    }
</div>