@model Projet2.ViewModels.AssociationEventInfoViewmodel

@using (Html.BeginForm())
{
    <fieldset>
        <legend align="center">Informations sur l'évènement</legend>
        <br>
        <br>
        <table width="50%" align="center">
            <tr>
                <td width="50%" align="right">@Html.LabelFor(m => Model.AssociationEvent.EventTitle)</td>
                <td>@Html.TextBoxFor(m => Model.AssociationEvent.EventTitle)</td>
                <td>@Html.ValidationMessageFor(m => Model.AssociationEvent.EventTitle)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.AssociationEvent.Description)</td>
                <td>@Html.TextBoxFor(m => Model.AssociationEvent.Description)</td>
                <td>@Html.ValidationMessageFor(m => Model.AssociationEvent.Description)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.File)</td>
                <td>@Html.TextBoxFor(m => Model.File, new { type = "file" })</td>
                <td>@Html.ValidationMessageFor(m => Model.File)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.AssociationEvent.Date)</td>
                <td>@Html.TextBoxFor(m => Model.AssociationEvent.Date)</td>
                <td>@Html.ValidationMessageFor(m => Model.AssociationEvent.Date)</td>
            </tr>

           <tr>      
                 <td>
                   l'association liée à l'évènement' :
                 @Html.DropDownListFor(m => m.SelectedAssociationId, new SelectList(Model.AssociationList, "Id", "Name"))
                       
                   @* @Html.DropDownListFor("SelectedAssociationId", new SelectList(ViewBag.assoListe,"Id","Name"))*@
                 </td>
           </tr>


            <tr>
                <td align="right">@Html.LabelFor(m => Model.AssociationEvent.EventType)</td>
                <td>@Html.TextBoxFor(m => Model.AssociationEvent.EventType)</td>
                <td>@Html.ValidationMessageFor(m => Model.AssociationEvent.EventType)</td>
            </tr>

            <tr>
                <td align="right">@Html.LabelFor(m => Model.AssociationEvent.Speakers)</td>
                <td>@Html.TextBoxFor(m => Model.AssociationEvent.Speakers)</td>
                <td>@Html.ValidationMessageFor(m => Model.AssociationEvent.Speakers)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.AssociationEvent.Artists)</td>
                <td>@Html.TextBoxFor(m => Model.AssociationEvent.Artists)</td>
                <td>@Html.ValidationMessageFor(m => Model.AssociationEvent.Artists)</td>
            </tr>

            <tr>
                <td align="right">@Html.LabelFor(m => Model.AssociationEvent.TicketsTotalNumber)</td>
                <td>@Html.TextBoxFor(m => Model.AssociationEvent.TicketsTotalNumber)</td>
                <td>@Html.ValidationMessageFor(m => Model.AssociationEvent.TicketsTotalNumber)</td>
            </tr>

             <tr>
                <td align="right">@Html.LabelFor(m => Model.Address.RoadNumber)</td>
                <td>@Html.TextBoxFor(m => Model.Address.RoadNumber)</td>
                <td>@Html.ValidationMessageFor(m => Model.Address.RoadNumber)</td>
            </tr>

            <tr>
                <td align="right">@Html.LabelFor(m => Model.Address.Road)</td>
                <td>@Html.TextBoxFor(m => Model.Address.Road)</td>
                <td>@Html.ValidationMessageFor(m => Model.Address.Road)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Address.City)</td>
                <td>@Html.TextBoxFor(m => Model.Address.City)</td>
                <td>@Html.ValidationMessageFor(m => Model.Address.City)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Address.PostalCode)</td>
                <td>@Html.TextBoxFor(m => Model.Address.PostalCode)</td>
                <td>@Html.ValidationMessageFor(m => Model.Address.PostalCode)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Address.Country)</td>
                <td>@Html.TextBoxFor(m => Model.Address.Country)</td>
                <td>@Html.ValidationMessageFor(m => Model.Address.Country)</td>
            </tr>
            <tr>
                <td colspan="3" align="center">
                    <br><br><input type="submit" value="Valider" />
                </td>
            </tr>
        </table>
    </fieldset>
}