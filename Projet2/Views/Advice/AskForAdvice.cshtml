@model Projet2.Models.AdviceRequest

@{
    ViewBag.Title = "Demande de conseil";
    Layout = "_Layout";
}

<div class="d-flex flex-column align-items-center w-100">
    <div class="d-flex">
        <h4>Votre demande de conseil</h4>
    </div>
    @using (Html.BeginForm())
    {
    <div class="d-flex flex-column align-items-center">
            @Html.HiddenFor(m => m.AssociationId)
            @Html.HiddenFor(m => m.Date)
            @Html.HiddenFor(m => m.AssociationName)
            <div class="d-flex flex-column">
                <div class="d-flex">
                    @Html.LabelFor(m => m.AdviceRequestSubject)
                </div>
                <div class="d-flex">
                    @Html.TextBoxFor(m => m.AdviceRequestSubject, new { style = "width: 500px"})
                </div>
            </div>
            <div class="d-flex flex-column">
                <div class="d-flex">
                    @Html.LabelFor(m => m.AdviceRequestText)
                </div>
                <div class="d-flex">
                    @Html.TextAreaFor(m => m.AdviceRequestText, new { style = "width: 500px; height: 500px"})
                </div>
            </div>
            <div class="d-flex mt-5">
                <input type="submit" value="Envoyer" />
            </div>
    </div>
    }
</div>