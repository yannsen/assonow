@model List<Projet2.ViewModels.AssociationInfoViewModel>

@using System.IO

@{
    Layout = "_Layout";
}

<table align="center" border="1">
    <tr>
        <th>Nom</th>
        <th>Ville</th>
        <th>Logo</th>
    </tr>
    @foreach (var association in Model)
    {
        <tr>
            <td>@association.Association.Name</td>
            <td>@association.Address.City</td>
            <td><img src="@association.Association.Image" );" /></td>
        </tr>
    }
</table>

