@model Projet2.ViewModels.MemberInfoViewModel

@using (Html.BeginForm())
{
    <fieldset>
        <legend align="center">@ViewBag.Legend</legend>
        <br>
        <br>
        <table width="50%" align="center">
            <tr>
                <td width="50%" align="right">@Html.LabelFor(m => Model.Member.Lastname)</td>
                <td>@Html.TextBoxFor(m => Model.Member.Lastname)</td>
                <td>@Html.ValidationMessageFor(m => Model.Member.Lastname)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Member.Firstname)</td>
                <td>@Html.TextBoxFor(m => Model.Member.Firstname)</td>
                <td>@Html.ValidationMessageFor(m => Model.Member.Firstname)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Member.Pseudonym)</td>
                <td>@Html.TextBoxFor(m => Model.Member.Pseudonym)</td>
                <td>@Html.ValidationMessageFor(m => Model.Member.Pseudonym)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Password)</td>
                <td>@Html.TextBoxFor(m => Model.Password)</td>
                <td>@Html.ValidationMessageFor(m => Model.Password)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Member.Mail)</td>
                <td>@Html.TextBoxFor(m => Model.Member.Mail)</td>
                <td>@Html.ValidationMessageFor(m => Model.Member.Mail)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Address.RoadNumber)</td>
                <td>@Html.TextBoxFor(m => Model.Address.RoadNumber)</td>
                <td>@Html.ValidationMessageFor(m => Model.Address.RoadNumber)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Address.Road)</td>
                <td>@Html.TextBoxFor(m => Model.Address.Road)</td>
                <td>@Html.ValidationMessageFor(m => Model.Address.Road)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Address.City)</td>
                <td>@Html.TextBoxFor(m => Model.Address.City)</td>
