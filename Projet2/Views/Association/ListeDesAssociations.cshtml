@model Projet2.ViewModels.ListSearchAssociationViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewBag.title = "Les associations présentes sur AssoNow";
    Layout = "_Layout";
}

<div class="d-flex flex-column w-100">
    <div class="d-flex flex-row w-100">
        @*@await Html.PartialAsync("CarouselAssociation", @Model.AssociationsList)*@
    </div>
    <div class="d-flex flex-row w-100">
        <div class="d-flex w-25">
            @using (Html.BeginForm()){
            <table class="table">
                <tr>
                    <td>@Html.LabelFor(m => Model.SearchName)</td>
                    <td>@Html.TextBoxFor(m => Model.SearchName)</td>
                </tr>
                <tr>
                    <td>
                        <br><br><input type="submit" value="Rechercher" />
                    </td>
                </tr>
            </table>
            }
        </div>
        <div class="d-flex flex-column w-75">
            @{
            int i = 0;
            while(i < Model.AssociationsList.Count)
            {
                <div class="d-flex flex-row w-100">
                @for(int j=0; j<4; j++)
                {
                            @if(i < Model.AssociationsList.Count)
                            {
                                <div class="card align-items-center w25">
                                    <img class="card-img-top" src="@Model.AssociationsList[i].Image">
                                    <div class="card-body">
                                        <h5 class="card-title">@Model.AssociationsList[i].Name</h5>
                                        <p class="card-text">@Model.AssociationsList[i].Description</p>
                                        <a class="btn btn-primary" href="~/Association/Profil?id=@Model.AssociationsList[i].Id">Plus de détails</a>
                                    </div>
                                </div>
                            }
                            i++;
                        }
                </div>
            }
        }
        </div>
    </div>
</div>