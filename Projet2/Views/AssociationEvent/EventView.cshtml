@{
    ViewBag.Title = "Evènement";
    Layout = "_Layout";
}


@*@using (Html.BeginForm())
    {
    <fieldset>*@


<div class="row justify-content-center mb-2">
    <h3>Informations sur l'évènement</h3>
    <br>
    <br>
    @Html.HiddenFor(m=>m.SelectedAssociationId)
    @Html.HiddenFor(m=>m.AssociationEvent.AddressId)
    @Html.HiddenFor(m=>m.AssociationEvent.AssociationId)
    @Html.HiddenFor(m=>m.AssociationEvent.Id)
</div>

<div class="section ">
    <div class="container">
        <div class="row example-page">
            <div class="col-md-6 text-center">
                <a href="examples/landing.html" target="_blank">
                    <img src="@Model.AssociationEvent.Image" alt="Rounded Image" style="height:400px; width:auto; min-height:400px; max-width:350px;" class="img-rounded img-responsive">

                </a>
            </div>
            <div class="col-md-6 text-center mt-4">

                @*
                *@
                <table>
                    <tr>
                        <td>
                            <h4>
                                @Model.AssociationEvent.EventTitle
                            </h4>
                            <hr width="50%" size="2" align="center">
                        </td>
                    </tr>

                    <tr>

                        <td>
                            @Model.AssociationEvent.Description
                            <hr width="50%" size="2" align="center">
                        </td>
                    </tr>

                    <tr>
                        <td>@Model.Address.RoadNumber, @Model.Address.Road</td>
                    <tr>
                    </tr>
                    <tr>
                        <td>@Model.Address.PostalCode, @Model.Address.City</td>
                    </tr>
                    <tr>

                        <td>
                                @Model.Address.Country
                            <hr width="50%" size="2" align="center">
                        </td>
                    </tr>
                    <tr>
                        <td>Date de l'évènement :</td>
                    </tr>
                    <tr>
                        <td>
                                @Model.AssociationEvent.Date.ToString("dd MM yyyy")
                            <hr width="50%" size="2" align="center">
                        </td>

                    </tr>

                    <tr>
                        <td>@Model.AssociationEvent.RemainingTickets places restantes</td>
                    </tr>

                </table>

                <div class="mt-2">
                    <a href="~/Ticketing/TicketRegister?id=@Model.AssociationEvent.Id" class="btn btn-primary">Commander</a>
                </div>
            </div>

        </div>
    </div>
</div>



