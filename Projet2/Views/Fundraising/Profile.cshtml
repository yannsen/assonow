@model Projet2.Models.Fundraising

@{
    ViewBag.title = "Profil de la collecte de dons";
    Layout = "_Layout";
}

<div class="d-flex flex-column w-100">
    <div class="d-flex align-items-center w-100">
        <img src="@Model.Association.Image" class="rounded mx-auto d-block" alt="@Model.Name">
    </div>
    <div class="d-flex flex-row align-items-center w-100">
        <div class="d-flex align-items-center w-25">
            <p>@Model.CurrentAmount</p>
        </div>
        <div class="d-flex align-items-center w-25">
            <p>@Model.DesiredAmount</p>
        </div>
    </div>
    <div class="d-flex align-items-center w-100">
        <p>@Model.Description</p>
    </div>
</div>