@model List<Projet2.Models.AssociationEvent>

<section class="pt-5 pb-5">
    <div class="container">
        <div class="row">
            <div class="col-6">
                <h3 class="title">Les évènements à venir</h3>
            </div>
            <!-- Le fameux -->
            <div class="col-12">
                <div id="carouselEvenement" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        @{
                            string isFirst = "active";
                            int i = 0;
                            if (Model.Count == 0)
                            {
                                <div class="carousel-item active">
                                    <div class="row">
                                        @for (int j = 0; j < 3; j++)
                                        {
                                            <div class="col-md-4 mb-3">
                                                <div class="card">
                                                    <img class="img-fluid" alt="100%x280" src="~/Images/carroussel_en_attendant.jpg">
                                                    <div class="card-body">
                                                        <h4 class="card-title">Bientôt, ici ...</h4>
                                                        <p class="card-text">D'autres évènements à venir !</p>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                            while (i < Model.Count)
                            {
                                <div class="carousel-item @isFirst">
                                    @{
                                        isFirst = "";
                                    }
                                    <div class="row">
                                        @for (int j = 0; j < 3; j++)
                                        {
                                            @if (i < Model.Count)
                                            {
                                                <div class="col-md-4 mb-3">
                                                    <div class="card">
                                                        <img class="img-fluid card-img-top" alt="100%x280" src="@Model[i].Image">
                                                        <div class="card-body">
                                                            <h4 class="card-title">@Model[i].EventTitle</h4>
                                                            <br>
                                                            <p class="card-text">@Model[i].Description</p>
                                                             <a href="../AssociationEvent/EventView?id=@Model[i].Id" class="stretched-link"></a> 
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="col-md-4 mb-3">
                                                    <div class="card">
                                                        <img class="img-fluid card-img-top" alt="100%x280" src="~/Images/carroussel_en_attendant.jpg">
                                                        <div class="card-body">
                                                            <h4 class="card-title">Bientôt, ici ... </h4>
                                                            <p class="card-text">D'autres évènements à venir !</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            i++;
                                        }
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-right">
                <a class="btn btn-primary mb-3 mr-1" href="#carouselEvenement" role="button" data-slide="prev">
                    <i class="fa fa-arrow-left"></i>
                </a>
                <a class="btn btn-primary mb-3 " href="#carouselEvenement" role="button" data-slide="next">
                    <i class="fa fa-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</section>





