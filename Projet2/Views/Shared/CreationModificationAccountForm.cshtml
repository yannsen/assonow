@model Projet2.ViewModels.MemberInfoViewModel


@using (Html.BeginForm())
{
    <div class="container login-container">
        <div class="row justify-content-md-center">
            <div class="col-md-6 login-form-1">
                <h3>@ViewBag.Legend</h3>
                <br>
                <br>
                
                    <div class="form-group row">
                        @Html.LabelFor(m => Model.Member.Lastname, new { @class = "col-sm-2 col-form-label"})
                        @Html.TextBoxFor(m => Model.Member.Lastname, new { @class = "form-control"})
                        @Html.ValidationMessageFor(m => Model.Member.Lastname)
                    </div>
                    <div class="form-group row">
                        @Html.LabelFor(m => Model.Member.Firstname)
                        @Html.TextBoxFor(m => Model.Member.Firstname, new { @class = "form-control"})
                     </div>
                    <div class="form-group">
                        <input type="submit" class="btnSubmit" value="Valider" />
                    </div>
            </div>
        </div>
    </div>

    <fieldset>
        <legend align="center">@ViewBag.Legend</legend>
        <br>
        <br>
        <table width="50%" align="center">
            @Html.HiddenFor(m => Model.Member.Id)
            @Html.HiddenFor(m => Model.Member.AddressId)
            @Html.HiddenFor(m => Model.Member.Role)
            @Html.HiddenFor(m => Model.Address.Id)
            <tr>
                <td width="50%" align="right">@Html.LabelFor(m => Model.Member.Lastname)</td>
                <td>@Html.TextBoxFor(m => Model.Member.Lastname)</td>
                <td>@Html.ValidationMessageFor(m => Model.Member.Lastname)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Member.Firstname)</td>
                <td>@Html.TextBoxFor(m => Model.Member.Firstname)</td>
                <td>@Html.ValidationMessageFor(m => Model.Member.Firstname)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Member.Pseudonym)</td>
                <td>@Html.TextBoxFor(m => Model.Member.Pseudonym)</td>
                <td>@Html.ValidationMessageFor(m => Model.Member.Pseudonym)</td>
            </tr>
            @if (ViewBag.Legend == "Création de compte")
            {
                <tr>
                    <td align="right">@Html.LabelFor(m => Model.Password)</td>
                    <td>@Html.PasswordFor(m => Model.Password)</td>
                    <td>@Html.ValidationMessageFor(m => Model.Password)</td>
                </tr>
            }
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Member.Mail)</td>
                <td>@Html.TextBoxFor(m => Model.Member.Mail)</td>
                <td>@Html.ValidationMessageFor(m => Model.Member.Mail)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Address.RoadNumber)</td>
                <td>@Html.TextBoxFor(m => Model.Address.RoadNumber)</td>
                <td>@Html.ValidationMessageFor(m => Model.Address.RoadNumber)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Address.Road)</td>
                <td>@Html.TextBoxFor(m => Model.Address.Road)</td>
                <td>@Html.ValidationMessageFor(m => Model.Address.Road)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Address.City)</td>
                <td>@Html.TextBoxFor(m => Model.Address.City)</td>
                <td>@Html.ValidationMessageFor(m => Model.Address.City)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Address.PostalCode)</td>
                <td>@Html.TextBoxFor(m => Model.Address.PostalCode)</td>
                <td>@Html.ValidationMessageFor(m => Model.Address.PostalCode)</td>
            </tr>
            <tr>
                <td align="right">@Html.LabelFor(m => Model.Address.Country)</td>
                <td>@Html.TextBoxFor(m => Model.Address.Country)</td>
                <td>@Html.ValidationMessageFor(m => Model.Address.Country)</td>
            </tr>
           @* @if (ViewBag.Legend == "Modification du compte")
            {
                <tr>
                    <td align="right">@Html.Label("Nouveau mot de passe :")</td>

                    <td>@Html.PasswordFor(m => Model.Password)</td>
                    <td>@Html.ValidationMessageFor(m => Model.Password)</td>
                </tr>
                <tr>
                    <td colspan="3" align="center"><p>Laissez le champ vide si vous ne souhaitez pas le changer</p></td>
                </tr>
            }*@
            <tr>
                <td colspan="3" align="center">
                    <br><input type="submit" value="Valider" />
                </td>
            </tr>
        </table>
    </fieldset>
}