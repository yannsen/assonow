@model List<Projet2.Models.Association>

@using Projet2.Models

@{
    ViewBag.title = "Vos adhésions";
    Layout = "_Layout";
}

<div class="d-flex flex-column align-items-center w-100">
    <div class="d-flex">
        <p>Vos adhésions</p>
    </div>
    <div class="d-flex">
        <table class="table table-bordered table-light table-striped border-2">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Association</th>
                    <th scope="col">Cotisation mensuelle</th>
                    <th scope="col">Quitter l'association</th>
                </tr>
            </thead>
            @foreach (Association association in @Model)
            {
                <tr>
                    <td><p>@association.Name</p></td>
                    <td><p>@association.Contribution</p></td>
                    <td><a class="btn btn-primary btn-lg px-4 me-sm-3" href="~/Compte/QuitAssociation/@association.Id">Quitter l'association</a></td>
                </tr>
            }
        </table>
    </div>
</div>